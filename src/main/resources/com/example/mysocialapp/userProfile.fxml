<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" stylesheets="@../../../map/css/userProfile.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mysocialapp.UserProfileController">

    <VBox layoutX="50.0" layoutY="62.0" prefHeight="200.0" prefWidth="100.0">
        <ImageView fx:id="profileImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../../map/Images/b.jpg"/>
        </ImageView>
        <Label fx:id="profileFirstName" text="First Name:"/>
        <Label fx:id="profileSecondName" text="Second Name"/>
        <Label fx:id="profileMail" text="Mail Address"/>
    </VBox>

    <Button fx:id="backToProfile" layoutX="15.0" layoutY="334.0" mnemonicParsing="false" onAction="#onBackToProfile"
            text="Back"/>
    <Button fx:id="friendStatus" layoutX="160.0" layoutY="334.0" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onStatus" prefHeight="50.0"
            prefWidth="90.0" text="Friend request"/>
</AnchorPane>
